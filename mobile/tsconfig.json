{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,

		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},

		"types": ["node"]
	},
	"include": ["app.config.ts", "app/**/*", "src/**/*", "global.d.ts", "expo-env.d.ts", ".expo/types/**/*.ts"],
	"exclude": ["node_modules"]
}
