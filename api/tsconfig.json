
{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"lib": ["ES2020"],
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"typeRoots": ["./src/types", "./node_modules/@types"],
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": "./src",
		"types": ["node"],
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
